# Event Handlers
$leftKeyBox.Add_Click({
    $leftKeyBox.Text = "..."
    $script:leftListeningMode = $true
})

$rightKeyBox.Add_Click({
    $rightKeyBox.Text = "..."
    $script:rightListeningMode = $true
})

$leftCpsBox.Add_ValueChanged({
    if ($leftCpsBox.Value -gt 0) {
        $script:leftClickTimer.Interval = [Math]::Max(1, [Math]::Floor(1000 / $leftCpsBox.Value))
    }
})

$rightCpsBox.Add_ValueChanged({
    if ($rightCpsBox.Value -gt 0) {
        $script:rightClickTimer.Interval = [Math]::Max(1, [Math]::Floor(1000 / $rightCpsBox.Value))
    }
})

$leftToggleCheck.Add_CheckedChanged({
    $script:leftToggleMode = $leftToggleCheck.Checked
})

$rightToggleCheck.Add_CheckedChanged({
    $script:rightToggleMode = $rightToggleCheck.Checked
})

$leftEnableCheck.Add_CheckedChanged({
    $script:leftEnabled = $leftEnableCheck.Checked
    if (-not $script:leftEnabled) {
        $script:leftClickTimer.Stop()
        $script:leftActive = $false
        $script:leftPreviousState = $false
    }
})

$rightEnableCheck.Add_CheckedChanged({
    $script:rightEnabled = $rightEnableCheck.Checked
    if (-not $script:rightEnabled) {
        $script:rightClickTimer.Stop()
        $script:rightActive = $false
        $script:rightPreviousState = $false
    }
})

$closeBtn.Add_Click({
    $form.Close()
})

$selfDestructBtn.Add_Click({
    $result = [System.Windows.Forms.MessageBox]::Show(
        "Close everything?`n`nThis will close:`n‚Ä¢ This app`n‚Ä¢ All PowerShell windows`n‚Ä¢ All CMD windows",
        "‚ö†Ô∏è Self Destruct",
        [System.Windows.Forms.MessageBoxButtons]::YesNo,
        [System.Windows.Forms.MessageBoxIcon]::Warning
    )
    
    if ($result -eq [System.Windows.Forms.DialogResult]::Yes) {
        $selfDestructBtn.Text = "üí• DESTRUCTING..."
        $form.Refresh()
        Start-Sleep -Milliseconds 300
        
        $script:leftClickTimer.Stop()
        $script:rightClickTimer.Stop()
        $script:keyMonitorTimer.Stop()
        
        try {
            Get-Process | Where-Object { $_.ProcessName -eq "powershell" -or $_.ProcessName -eq "pwsh" } | ForEach-Object {
                if ($_.Id -ne $PID) {
                    Stop-Process -Id $_.Id -Force -ErrorAction SilentlyContinue
                }
            }
            
            Get-Process | Where-Object { $_.ProcessName -eq "cmd" } | ForEach-Object {
                Stop-Process -Id $_.Id -Force -ErrorAction SilentlyContinue
            }
        } catch {}
        
        $form.Close()
        Stop-Process -Id $PID -Force
    }
})

# Configurar timers
$script:leftClickTimer.Add_Tick({ Invoke-LeftClick })
$script:rightClickTimer.Add_Tick({ Invoke-RightClick })
$script:keyMonitorTimer.Interval = 10
$script:keyMonitorTimer.Add_Tick({ Update-KeyStates })
$script:keyMonitorTimer.Start()

$form.Add_FormClosing({
    $script:leftClickTimer.Stop()
    $script:rightClickTimer.Stop()
    $script:keyMonitorTimer.Stop()
    $script:leftClickTimer.Dispose()
    $script:rightClickTimer.Dispose()
    $script:keyMonitorTimer.Dispose()
})

$form.Add_Shown({$form.Activate()})
[void]$form.ShowDialog()
