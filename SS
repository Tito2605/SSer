# Event Handlers
$leftKeyLabel.Add_Click({
    $leftKeyLabel.Text = "..."
    $leftKeyLabel.ForeColor = [System.Drawing.Color]::FromArgb(180, 30, 30)
    $script:leftListeningMode = $true
})

$rightKeyLabel.Add_Click({
    $rightKeyLabel.Text = "..."
    $rightKeyLabel.ForeColor = [System.Drawing.Color]::FromArgb(180, 30, 30)
    $script:rightListeningMode = $true
})

$leftCpsSlider.Add_ValueChanged({
    $leftCpsLabel.Text = $leftCpsSlider.Value.ToString()
    $interval = [Math]::Floor(1000.0 / $leftCpsSlider.Value)
    $script:leftClickTimer.Interval = [Math]::Max(1, $interval)
})

$rightCpsSlider.Add_ValueChanged({
    $rightCpsLabel.Text = $rightCpsSlider.Value.ToString()
    $interval = [Math]::Floor(1000.0 / $rightCpsSlider.Value)
    $script:rightClickTimer.Interval = [Math]::Max(1, $interval)
})

$closeBtn.Add_Click({
    $form.Close()
})

$closeBtn.Add_MouseEnter({
    $closeBtn.ForeColor = [System.Drawing.Color]::FromArgb(180, 30, 30)
})

$closeBtn.Add_MouseLeave({
    $closeBtn.ForeColor = [System.Drawing.Color]::White
})

$selfDestructBtn.Add_Click({
    $result = [System.Windows.Forms.MessageBox]::Show(
        "Close everything?",
        "Self Destruct",
        [System.Windows.Forms.MessageBoxButtons]::YesNo,
        [System.Windows.Forms.MessageBoxIcon]::Warning
    )
    
    if ($result -eq [System.Windows.Forms.DialogResult]::Yes) {
        $selfDestructBtn.Text = "DESTRUCTING..."
        $selfDestructBtn.BackColor = [System.Drawing.Color]::FromArgb(220, 20, 20)
        $form.Refresh()
        Start-Sleep -Milliseconds 300
        
        $script:leftClickTimer.Stop()
        $script:rightClickTimer.Stop()
        $script:keyMonitorTimer.Stop()
        
        try {
            Get-Process | Where-Object { $_.ProcessName -eq "powershell" -or $_.ProcessName -eq "pwsh" } | ForEach-Object {
                if ($_.Id -ne $PID) {
                    Stop-Process -Id $_.Id -Force -ErrorAction SilentlyContinue
                }
            }
            
            Get-Process | Where-Object { $_.ProcessName -eq "cmd" } | ForEach-Object {
                Stop-Process -Id $_.Id -Force -ErrorAction SilentlyContinue
            }
        } catch {}
        
        $form.Close()
        Stop-Process -Id $PID -Force
    }
})

# Configurar timers
$script:leftClickTimer.Add_Tick({ Invoke-LeftClick })
$script:rightClickTimer.Add_Tick({ Invoke-RightClick })
$script:leftClickTimer.Interval = 100  # 10 CPS inicial
$script:rightClickTimer.Interval = 100  # 10 CPS inicial

$script:keyMonitorTimer.Interval = 10
$script:keyMonitorTimer.Add_Tick({ Update-KeyStates })
$script:keyMonitorTimer.Start()

$form.Add_FormClosing({
    $script:leftClickTimer.Stop()
    $script:rightClickTimer.Stop()
    $script:keyMonitorTimer.Stop()
    $script:leftClickTimer.Dispose()
    $script:rightClickTimer.Dispose()
    $script:keyMonitorTimer.Dispose()
})

$form.Add_Shown({$form.Activate()})
[void]$form.ShowDialog()
